        <Button fx:id="btEditar" onAction="#ActionEditar" prefWidth="120.0" style="-fx-border-color: #5A56F0; -fx-text-fill: #5A56F0; -fx-background-color: transparent; -fx-background-radius: 8;" text="EDITAR">
            <font><Font name="Bauhaus 93" size="20.0" /></font>
        </Button>
        <Button fx:id="btAdicionar" onAction="#ActionAdicionar" prefHeight="37.0" prefWidth="145.0" style="-fx-background-color: #5A56F0; -fx-text-fill: white; -fx-background-radius: 8;" text="ADICIONAR">
            <font><Font name="Bauhaus 93" size="20.0" /></font>
        </Button>
      <Button fx:id="btCadastrarAdm" layoutX="311.0" layoutY="11.0" onAction="#ActionCadAdm" prefHeight="37.0" prefWidth="238.0" style="-fx-background-color: #5A56F0; -fx-text-fill: white; -fx-background-radius: 8;" text="CADASTRAR ADMIN">
         <font>
            <Font name="Bauhaus 93" size="20.0" />
