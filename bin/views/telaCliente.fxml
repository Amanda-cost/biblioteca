        <padding>
            <Insets bottom="20" left="10" right="10" top="20" />
        </padding>

        <ImageView fitHeight="50" fitWidth="50">
            <image>
                <Image url="@../media/Icone.png" />
            </image>
        </ImageView>

        <Label fx:id="BtLivro" onMouseClicked="#ActionTelaLivro" style="-fx-text-fill: #666666;" text="Livro">
            <font><Font name="Bauhaus 93" size="20.0" /></font>
        </Label>
        <Label style="-fx-text-fill: #5A56F0; -fx-font-weight: bold;" text="Clientes">
            <font><Font name="Bauhaus 93" size="20.0" /></font>
        </Label>
        <Label fx:id="BtEmprestimos" onMouseClicked="#ActionTelaEmprestimos" style="-fx-text-fill: #666666;" text="EmprÃ©stimos">
            <font><Font name="Bauhaus 93" size="20.0" /></font>
        </Label>
