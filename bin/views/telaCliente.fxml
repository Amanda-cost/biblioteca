    <!-- Topbar -->
    <HBox alignment="CENTER_LEFT" layoutX="150.0" layoutY="0.0" prefHeight="60.0" prefWidth="930.0" spacing="20.0" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
        <padding>
            <Insets left="20" right="20" />
        </padding>

        <Label style="-fx-text-fill: #000000; -fx-font-weight: bold;" text="Seja Bem-Vindo!">
            <font><Font name="Bauhaus 93" size="20.0" /></font>
        </Label>

        <Region fx:id="topSpacer" HBox.hgrow="ALWAYS" />

        <VBox alignment="CENTER_RIGHT">
            <Label fx:id="txtNome" style="-fx-font-weight: bold;" text="Adam Smasher">
                <font><Font name="Bauhaus 93" size="14.0" /></font>
            </Label>
            <Label text="Administrador" textFill="#777777">
                <font><Font name="Bauhaus 93" size="12.0" /></font>
            </Label>
        </VBox>

        <Circle fill="#dddddd" radius="15.0" />
    </HBox>

    <!-- Main Content -->
    <VBox layoutX="170.0" layoutY="80.0" prefWidth="880.0" spacing="20.0">
        
        <!-- Campo de pesquisa -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="btPesquisar" onMouseClicked="#ActionSearch" style="-fx-font-size: 16px;" text="ðŸ”" />
            <TextField fx:id="txtPesquisar" prefWidth="400.0" promptText="Pesquisar" />
        </HBox>

        <!-- Tabela -->
        <TableView fx:id="tabelaCliente" prefHeight="450.0" prefWidth="880.0">
            <columns>
                <TableColumn fx:id="columnIdCliente" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="columnNome" prefWidth="180.0" text="Nome" />
                <TableColumn fx:id="columnIdade" prefWidth="100.0" text="Idade" />
                <TableColumn fx:id="columnCpf" prefWidth="170.0" text="CPF" />
                <TableColumn fx:id="columnTurma" prefWidth="120.0" text="Turma" />
                <TableColumn fx:id="columnTelefone" prefWidth="160.0" text="Telefone" />
            </columns>
        </TableView>
    </VBox>

    <!-- BotÃµes inferiores -->
    <HBox alignment="CENTER" layoutX="170.0" layoutY="660.0" spacing="30.0">
        <Button fx:id="btExcluir" onAction="#ActionExcluir" prefWidth="120.0" style="-fx-background-color: #FF7E64; -fx-text-fill: white; -fx-background-radius: 8;" text="EXCLUIR">
