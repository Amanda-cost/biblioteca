<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerLogin">

   <children>

      <!-- Background (imagem de fundo) -->
      <ImageView fitHeight="720.0" fitWidth="1080.0" preserveRatio="false">
         <image>
            <Image url="@../media/Login.png" />
         </image>
      </ImageView>

      <!-- Card branco centralizado -->
      <Pane layoutX="120.0" layoutY="160.0" prefHeight="400.0" prefWidth="360.0" style="-fx-background-color: white; -fx-background-radius: 20;">
         
         <children>
            
            <!-- Título Login -->
            <Text layoutX="150.0" layoutY="50.0" text="Login">
               <font><Font name="Bauhaus 93" size="22.0" /></font>
            </Text>
            
            <!-- Campo Usuário -->
            <Text fill="#7a7a7a" layoutX="30.0" layoutY="95.0" text="Usuário">
               <font><Font name="Bauhaus 93" size="14.0" /></font>
            </Text>
            <TextField fx:id="txtUsuario" layoutX="30.0" layoutY="105.0" prefHeight="40.0" prefWidth="300.0" promptText="CPF" style="-fx-background-radius: 9; -fx-border-color: #ccc; -fx-border-radius: 9;" />

            <!-- Campo Password -->
            <Text fill="#7a7a7a" layoutX="30.0" layoutY="170.0" text="Password">
               <font><Font name="Bauhaus 93" size="14.0" /></font>
            </Text>
            <PasswordField fx:id="txtSenha" layoutX="30.0" layoutY="180.0" prefHeight="40.0" prefWidth="300.0" promptText="SENHA" style="-fx-background-radius: 9; -fx-border-color: #ccc; -fx-border-radius: 9;" />

            <!-- Botão Login -->
            <Button fx:id="btLogin" layoutX="30.0" layoutY="260.0" onAction="#ActionLogin" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #FF6B4A; -fx-background-radius: 9;" text="LOGIN" textFill="WHITE">
               <font><Font name="Bauhaus 93" size="14.0" /></font>
            </Button>

         </children>
      </Pane>

      <!-- Texto Biblioteca -->
      <Text fill="white" layoutX="560.0" layoutY="230.0" text="Biblioteca">
         <font><Font name="Bauhaus 93" size="36.0" /></font>
      </Text>

      <!-- Frase motivacional -->
      <Text fill="white" layoutX="560.0" layoutY="280.0" text="Estudar é a chave para">
         <font><Font name="Bauhaus 93" size="20.0" /></font>
      </Text>
      <Text fill="white" layoutX="560.0" layoutY="310.0" text="grande parte">
         <font><Font name="Bauhaus 93" size="20.0" /></font>
      </Text>
      <Text fill="#FF6B4A" layoutX="560.0" layoutY="340.0" text="das Oportunidades">
         <font><Font name="Bauhaus 93" size="20.0" /></font>
      </Text>
      <Text fill="white" layoutX="560.0" layoutY="370.0" text="que surgirão no seu futuro.">
         <font><Font name="Bauhaus 93" size="20.0" /></font>
      </Text>

   </children>
</AnchorPane>
