<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerEditLivro">

   <children>

      <!-- Avatar no topo -->
      <Circle fill="#d9d9d9" layoutX="45.0" layoutY="45.0" radius="28.0" />

      <!-- Título superior -->
      <Text layoutX="90.0" layoutY="60.0" text="Editar Livro">
         <font><Font name="Bauhaus 93" size="28.0" /></font>
      </Text>

      <!-- Campo Id -->
      <TextField fx:id="txtId" editable="false" layoutX="292.0" layoutY="120.0" prefHeight="43.0" prefWidth="200.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="310.0" layoutY="106.0" prefHeight="27.0" prefWidth="40.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Id">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Linha separadora -->
      <Line endX="600.0" layoutX="280.0" layoutY="180.0" stroke="#cccaca" />

      <!-- Campo Título -->
      <TextField fx:id="txtTitulo" layoutX="292.0" layoutY="220.0" prefHeight="43.0" prefWidth="307.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="310.0" layoutY="206.0" prefHeight="27.0" prefWidth="70.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Título">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Campo Gênero -->
      <TextField fx:id="txtGenero" layoutX="620.0" layoutY="220.0" prefHeight="43.0" prefWidth="207.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="640.0" layoutY="206.0" prefHeight="27.0" prefWidth="80.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Gênero">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Campo Autor -->
      <TextField fx:id="txtAutor" layoutX="292.0" layoutY="290.0" prefHeight="43.0" prefWidth="307.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="310.0" layoutY="276.0" prefHeight="27.0" prefWidth="70.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Autor">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Campo Editora -->
      <TextField fx:id="txtEditora" layoutX="620.0" layoutY="290.0" prefHeight="43.0" prefWidth="207.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="640.0" layoutY="276.0" prefHeight="27.0" prefWidth="90.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Editora">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Campo Ano -->
      <TextField fx:id="txtAno" layoutX="292.0" layoutY="360.0" prefHeight="43.0" prefWidth="200.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="310.0" layoutY="346.0" prefHeight="27.0" prefWidth="60.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Ano">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Campo Quantidade Disponível -->
      <TextField fx:id="txtQuantidade" layoutX="520.0" layoutY="360.0" prefHeight="43.0" prefWidth="307.0" style="-fx-background-radius: 9; -fx-border-color: #000; -fx-border-radius: 9; -fx-background-color: #F5F5F5;" />
      <Pane layoutX="540.0" layoutY="346.0" prefHeight="27.0" prefWidth="180.0" style="-fx-background-color: #F5F5F5;">
         <children>
            <Text layoutX="7.0" layoutY="20.0" text="Quantidade Disponível">
               <font><Font name="Bauhaus 93" size="16.0" /></font>
            </Text>
         </children>
      </Pane>

      <!-- Botões ADD e Cancelar -->
      <Button fx:id="btAdd" layoutX="820.0" layoutY="500.0" mnemonicParsing="false" onAction="#actionAdd" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: #656DF9; -fx-background-radius: 9;" text="Editar" textFill="WHITE">
         <font><Font name="Bauhaus 93" size="16.0" /></font>
      </Button>

      <Button fx:id="btCancelar" layoutX="720.0" layoutY="500.0" mnemonicParsing="false" onAction="#actionCancel" prefHeight="38.0" prefWidth="90.0" style="-fx-background-color: #FF6B4A; -fx-background-radius: 9;" text="Cancelar" textFill="WHITE">
         <font><Font name="Bauhaus 93" size="16.0" /></font>
      </Button>

      <!-- Menu lateral -->
      <Circle fill="#656DF9" layoutX="65.0" layoutY="225.0" radius="14.0" />
      <Text fill="WHITE" layoutX="58.0" layoutY="232.0" text="✓">
         <font><Font name="Bauhaus 93" size="16.0" /></font>
      </Text>
      <Text layoutX="90.0" layoutY="234.0" style="-fx-font-weight: bold;" text="Editar Empréstimo">
         <font><Font name="Bauhaus 93" size="17.0" /></font>
      </Text>

   </children>

</AnchorPane>
